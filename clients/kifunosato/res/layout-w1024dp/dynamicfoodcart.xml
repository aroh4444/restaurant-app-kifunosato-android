<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayouRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutDynamicFoodItems"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/linearLayoutFoodItemsDetails"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageButtonRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:paddingLeft="20dp"
                android:src="@drawable/cross_big" />

            <LinearLayout
                android:id="@+id/linearLayoutVertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_edit_food_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/dynamicfoodcart_txt_edit_food_name"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_edit_food_calory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/dynamicfoodcart_txt_edit_food_calory"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnAddOnDynamicFood"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/addon"
                        android:textColor="@color/description_smallHeaders"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dp"
                        android:background="@color/description_viewLine"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/checkBoxlayoutDynamicFood"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_rectangle_button"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="5dp" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_edit_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/dynamicfoodcart_txt_edit_food_price"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewFoodItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="25dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dynamicfoodcart_textViewFoodItemPrice"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_edit_food"
            android:layout_width="135dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/round_corners" />

        <LinearLayout
            android:id="@+id/linearLayoutImage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal" >

                    <TextView
                        android:id="@+id/textViewQuentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quantity"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_edit_food_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical|center_horizontal" >

                    <ImageButton
                        android:id="@+id/imageButtonDecreaseAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     "
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageButton
                        android:id="@+id/imageButtonIncreaseAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/plus" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:background="@color/dynamicfoodcart_viewLine" />

</LinearLayout>
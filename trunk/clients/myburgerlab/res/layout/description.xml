<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_heading_description"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/top_bar"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_headerImage_description"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
             android:src="@drawable/cafelogo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="620dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadeScrollbars="false"
                android:background="@drawable/transparentcornerback"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb" >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/food_name"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/not_available"
                                android:textColor="@color/description_foodName"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout6"
                            android:layout_width="280dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/food_item_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/price"
                                android:textColor="@color/description_foodItemPrice"
                                android:textSize="17dp"
                                android:visibility="gone"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Input Items holding linear layout -->

                    <LinearLayout
                        android:id="@+id/selections"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal" >

                        <!-- Radio Group Holding Linear Layout -->
						
						<LinearLayout 
						    android:id="@+id/optionsAddonsTopLayout"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            						
	                        <LinearLayout
	                            android:id="@+id/radiolayout"
	                            android:layout_width="300dp"
	                            android:layout_height="wrap_content"
	                            android:background="@drawable/green_rectangle_button"
	                            android:gravity="center" >
	
	                            <RadioGroup
	                                android:id="@+id/options_group"
	                                android:layout_width="fill_parent"
	                                android:layout_height="wrap_content"
	                                android:orientation="vertical" >
	                            </RadioGroup>
	                        </LinearLayout>
	                         <LinearLayout android:id="@+id/lnAddOn"
	                            android:orientation="vertical"
	                            android:layout_height="wrap_content"
	                            android:layout_width="fill_parent"
	                            android:visibility="invisible">
		                         <View
			                        android:layout_width="fill_parent"
			                        android:layout_height="1dip"
			                        android:layout_marginTop="20dp"
			                        android:visibility="visible"
			                        android:background="@color/description_viewLine" />
		                          <TextView
	                                android:layout_width="wrap_content"
	                                android:layout_height="wrap_content"
	                                android:layout_gravity="left"
	                                android:layout_marginTop="10dp"
	                                android:gravity="center"
	                                android:text="@string/addon"
	                                android:textColor="@color/description_smallHeaders"
	                                android:textSize="17dp"
	                                android:textStyle="bold" />
		                         <View
			                        android:layout_width="fill_parent"
			                        android:layout_height="1dip"
			                        android:layout_marginTop="20dp"
			                        android:visibility="visible"
			                        android:background="@color/description_viewLine" />
		                        <LinearLayout
		                            android:id="@+id/checkBoxlayout"
		                            android:layout_width="300dp"
		                            android:layout_height="wrap_content"
		                            android:background="@drawable/green_rectangle_button"
		                            android:gravity="left"
		                            android:paddingLeft="5dp"
		                            android:orientation="vertical" >
									
		                            
		                        </LinearLayout>	                            
	                        </LinearLayout>
	                        
						</LinearLayout>
                        <!-- Quantity Options Holding Linear Layout -->

                        <LinearLayout
                            android:id="@+id/options"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:id="@+id/linearLayout10"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:paddingTop="20dp" >

                                <TextView
                                    android:id="@+id/quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/quantity"
                                    android:textColor="@color/description_smallHeaders"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/description_smallHeaders"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <!-- Plus and Minus Buttons -->

                            <LinearLayout
                                android:id="@+id/linearLayout3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="10dp" >

                                <Button
                                    android:id="@+id/reduce"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/minus"
                                    android:onClick="onDecreaseClick" >
                                </Button>

                                <Button
                                    android:id="@+id/add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/plus"
                                    android:onClick="onIncreaseClick" >
                                </Button>
                            </LinearLayout>
                        </LinearLayout>
                        <!-- End of Quantity Options Holding Linear Layout -->
                    </LinearLayout>
                    <!-- End of Input Items holding linear layout -->

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="20dp"
                        android:background="@color/description_viewLine" />

                    <TextView
                        android:id="@+id/price_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/price"
                        android:textColor="@color/description_smallHeaders"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                    
                    <LinearLayout
		                android:id="@+id/buttons_linear_layout"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom"
		                android:layout_marginBottom="20dp"
		                android:layout_marginTop="20dp"
		                android:gravity="right|center_vertical"
		                android:orientation="horizontal" >
		
		                <Button
		                    android:id="@+id/btn_order"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="10dp"
		                    android:background="@drawable/green_rectangle_button"
		                    android:onClick="onOrderClick"
		                    android:paddingBottom="10dp"
		                    android:paddingLeft="20dp"
		                    android:paddingRight="20dp"
		                    android:paddingTop="10dp"
		                    android:text="@string/order"
		                    android:textColor="@color/description_btn"
		                    android:textStyle="bold" />
		
		                <Button
		                    android:id="@+id/btn_remove"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="10dp"
		                    android:background="@drawable/red_rectangle_button"
		                    android:onClick="onRemoveClick"
		                    android:paddingBottom="10dp"
		                    android:paddingLeft="20dp"
		                    android:paddingRight="20dp"
		                    android:paddingTop="10dp"
		                    android:text="@string/remove"
		                    android:textColor="@color/description_btn"
		                    android:textStyle="bold"
		                    android:visibility="gone" />
		
		                <Button
		                    android:id="@+id/btn_cancel"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:background="@drawable/orange_rectangle_button"
		                    android:onClick="onCancelClick"
		                    android:paddingBottom="10dp"
		                    android:paddingLeft="20dp"
		                    android:paddingRight="20dp"
		                    android:paddingTop="10dp"
		                    android:text="@string/cancel"
		                    android:textColor="@color/description_btn"
		                    android:textStyle="bold" />
		            </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="20dp"
                        android:visibility="visible"
                        android:background="@color/description_viewLine" />
                    <TextView 
                        android:id="@+id/txtSpecialInstruction_desription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/special_instructions"
                        android:textColor="@color/description_smallHeaders"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                    
                    <EditText android:id="@+id/txtSpecialInstruction_description"
                        android:layout_height="wrap_content"
		                android:background="@drawable/roundedinsidetextfield"
		                android:imeOptions="actionDone"
		                android:inputType="textWebEditText"
		                android:paddingLeft="10dp"
		                android:paddingTop="10dp"
		                android:paddingBottom="10dp"
		                android:minLines="3"
		                 android:layout_width="match_parent"    				
		                android:textColor="@color/roundedTextfieldInside_TextColor"/>
                        
                    

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="20dp"
                        android:visibility="invisible"
                        android:background="@color/description_viewLine" />
					
                    <TextView
                        android:id="@+id/energy_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/energy"
                        android:visibility="invisible"
                        android:textColor="@color/description_smallHeaders"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="20dp"
                        android:background="@color/description_viewLine" />

                    <TextView
                        android:id="@+id/descript_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/descriptions"
                        android:textColor="@color/description_smallHeaders"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descript_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/not_available"
                        android:textColor="@color/description_descriptionText"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="20dp"
                        android:visibility="invisible"
                        android:background="@color/description_viewLine" />

                    <TextView
                        android:id="@+id/cooking_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/cooking"
                        android:visibility="invisible"
                        android:textColor="@color/description_smallHeaders"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cooking_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="invisible"
                        android:text="@string/not_available"
                        android:textColor="@color/description_cookingInstructionText"
                        android:textSize="14dp" />
                </LinearLayout>
            </ScrollView>

            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>